*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-default
  font-size 15px
  text-shadow 0 0 1px transparent
  @media screen and (max-width: 1260px)
    margin 0 30px
  @media screen and (max-width: 600px)
    font-size 13px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 1260px)
    width 100%

#main-col
  width 100%
  @media screen and (max-width: 1260px)
    width 100%
    margin-right -300px
  @media screen and (max-width: 900px)
    margin-right 0
    float none

#wrapper
  @media screen and (max-width: 1260px)
    margin-right 300px
  @media screen and (max-width: 900px)
    margin-right 0
  #index_main
    width main-width
    float left
    position relative

ul.search-result-list {
  padding-left: 10px;
}
a.search-result-title {
  font-weight: bold;
  color: #fff;
}
p.search-result {
  color=#555;
  display: none;
}
em.search-keyword {
  border-bottom: 1px dashed #4088b8;
  font-weight: bold;
}
.mjx-math {
  font-size: 30px
}
.mjx-chtml
  text-align left 