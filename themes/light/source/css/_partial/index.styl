#index_main
  position absolute
#pagination
  a
    display block
    padding 5px 10px
    background #808080
    color color-meta
    font-family font-title
    text-shadow 0 0 1px #fff
    margin-bottom 50px
    &:hover
      background color-link
      color #fff
      text-decoration none
      text-shadow none

  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon

  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon

#index-continer
  width 900px
  padding 0px
  margin 0px
  float left

.page
  margin-top:20px